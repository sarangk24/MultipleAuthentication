            <td>
                @Html.DisplayFor(modelItem => item.NewsItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section.SectionName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.NewsItemID }) |
                @Html.ActionLink("Details", "Details", new { id=item.NewsItemID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.NewsItemID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
