@model IEnumerable<MultipleAuthentication.DatabaseContext.NewsItem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewsItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsItemDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActualLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
